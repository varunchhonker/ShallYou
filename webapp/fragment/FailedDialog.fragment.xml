<core:FragmentDefinition xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog showHeader="true" title="You Failed!" draggable="false" class="failedDialog">
		<subHeader>
			<Bar>
				<contentMiddle>
					<Title id="failedDialogReasonText" text=""/>
				</contentMiddle>
			</Bar>
		</subHeader>
		<l:Grid defaultSpan="L12 M12 S12">
			<l:content>
				<HBox justifyContent="Center">
					<Button text="Show Movie" class="homePageCenterButtons menuButtons" press="onPressShowMovie"></Button>
				</HBox>
				<HBox justifyContent="Center">
					<Button text="Play Next Movie" class="homePageCenterButtons menuButtons"
						press="onPressPlayNextMovie"/>
				</HBox>
				<HBox justifyContent="Center">
					<Button text="Go To Levels" iconFirst="false" press="onPressGoToLevels" class="homePageCenterButtons menuButtons"/>
				</HBox>
			</l:content>
		</l:Grid>
	</Dialog>
</core:FragmentDefinition>