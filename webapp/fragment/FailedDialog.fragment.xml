<core:FragmentDefinition xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog showHeader="true" title="You Failed!" draggable="false" escapeHandler="failedDialogEscapeHandler">
		<subHeader>
			<Bar>
				<contentMiddle>
					<Title id="failedDialogReasonText" text=""/>
				</contentMiddle>
			</Bar>
		</subHeader>
		<l:Grid defaultSpan="L12 M12 S12">
			<l:content>
				<HBox justifyContent="Center">
					<Button text="Show Movie" icon="sap-icon://lead" iconFirst="false" press="showMovie" class="homePageCenterButtons"></Button>
				</HBox>
				<HBox justifyContent="Center">
					<Button text="Play Next Movie" icon="sap-icon://lead" iconFirst="false" press="proceedToNextMovie" class="homePageCenterButtons"/>
				</HBox>
				<HBox justifyContent="Center">
					<Button text="Go To Levels" iconFirst="false" press="onPressLevels" class="homePageCenterButtons"/>
				</HBox>
			</l:content>
		</l:Grid>
	</Dialog>
</core:FragmentDefinition>