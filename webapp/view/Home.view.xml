<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="ShallYou.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}" class="homePage">
		<customHeader>
			<Bar class="pageHeader">
				<contentLeft>
					<core:Icon src="sap-icon://customer" class="pageHeaderIcons" press="onPressProfile"/>
				</contentLeft>
				<contentMiddle>
					<HBox>
						<core:Icon src="sap-icon://lead" class="pageHeaderIcons" press="onPressCoin"/>
						<Label text="{global>/Coins}" design="Bold"/>
					</HBox>
				</contentMiddle>
				<contentRight>
					<core:Icon src="sap-icon://action-settings" class="pageHeaderIcons" press="onPressSettings"/>
					<!--<HBox>
						<Button text="Start" press="startTimer"/>
						<HBox id="timerContainer" class="timerContainer" width="3rem">
							<customData>
								<core:CustomData writeToDom="true" key="timer" value="6"/>
							</customData>
						</HBox>
					</HBox>-->
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<l:Grid id="gridHeader" defaultSpan="L12 M12 S12">
				<l:content>
					<Image id="logo" src="{global>/modulePath}/images/logo.png" densityAware="true" height="100%" width="100%" visible="false">
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Image>
					<HBox justifyContent="Center">
						<Button icon="sap-icon://media-play" text="Play" press="onPressPlay" class="homePageCenterButtons"></Button>
					</HBox>
					<HBox justifyContent="Center">
						<Button icon="sap-icon://competitor" text="Achievements" press="onPressAchievements" class="homePageCenterButtons"></Button>
					</HBox>
					<HBox justifyContent="Center">
						<Button icon="sap-icon://contacts" text="Rules" press="onPressRules" class="homePageCenterButtons"></Button>
					</HBox>
					<HBox justifyContent="Center">
						<HBox justifyContent="Center" class="homePageBottomButtonsHBox">
							<Button icon="{global>/modulePath}/images/fb.png" tooltip="Share On Facebook" class="homePageBottomButtons"></Button>
							<Button icon="{global>/modulePath}/images/gplus.png" tooltip="Share On Google+" class="homePageBottomButtons"></Button>
							<Button icon="sap-icon://action" tooltip="Share On Facebook" class="homePageBottomButtons"></Button>
							<Button icon="sap-icon://favorite" tooltip="Share On Facebook" class="homePageBottomButtons"></Button>
						</HBox>
					</HBox>
				</l:content>
			</l:Grid>
		</content>
	</Page>
</mvc:View>