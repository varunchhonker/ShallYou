<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="ShallYou.controller.Settings" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}">
		<customHeader>
			<Bar class="pageHeader">
				<contentLeft>
					<core:Icon src="sap-icon://nav-back" class="pageHeaderIcons" press="onNavBack"/>
				</contentLeft>
				<contentMiddle>
					<HBox>
						<core:Icon src="sap-icon://lead" class="pageHeaderIcons" press="onPressCoin"/>
						<Label text="{global>/Coins}" design="Bold" class="pageHeaderCoinsLabel"/>
					</HBox>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<l:Grid id="gridHeader" defaultSpan="L6 M6 S6">
				<l:content>
					<Label text="Sound"/>
					<Switch state="true" customTextOn="On" customTextOff="Off"/>
					<Label text="Current Journey"/>
					<Text text="{global>/Journey}">
						<layoutData>
							<l:GridData span="L4 M4 S4"/>
						</layoutData>
					</Text>
					<Button icon="sap-icon://edit" press="onPressChangeJourney">
						<layoutData>
							<l:GridData span="L2 M2 S2"/>
						</layoutData>
					</Button>
				</l:content>
			</l:Grid>
		</content>
	</Page>
</mvc:View>