<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="ShallYou.controller.Levels" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}" class="levelsPage">
		<customHeader>
			<Bar class="pageHeader">
				<contentLeft>
					<core:Icon src="sap-icon://nav-back" class="pageHeaderIcons" press="onNavBack"/>
				</contentLeft>
				<contentMiddle>
					<HBox>
						<core:Icon src="sap-icon://lead" class="pageHeaderIcons" press="onPressCoin"/>
						<Label text="20" design="Bold"/>
					</HBox>
				</contentMiddle>
				<contentRight>
					<core:Icon src="sap-icon://action-settings" class="pageHeaderIcons" press="onPressSettings"/>
				</contentRight>
			</Bar>
		</customHeader>
		<subHeader>
			<Bar class="levelsPageSubheaderBar">
				<contentMiddle>
					<Title text="Select Level..." class="levelsPageTitle"></Title>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<!--<Title text="Select Level..." class="levelsPageTitle"></Title>-->
			<List id="levelList" mode="SingleSelectMaster" items="{path: '/'}" rememberSelections="false" selectionChange="onSelectLevel" class="levelsPageList">
				<CustomListItem type="Inactive" class="levelsPageListItems">
					<VBox>
						<HBox justifyContent="SpaceAround">
							<core:Icon size="2rem" src="{=${unlocked} ? 'sap-icon://begin' : 'sap-icon://locked'}" class="sapUiSmallMarginBegin"/>
							<Label text="{levelName}" class="levelsPageListItemLabel"/>
							<Label text="{levelProgress}/100" class="levelsPageListItemScore"/>
						</HBox>
						<ProgressIndicator class="levelsPageListItemProgressIndicator" percentValue="{levelProgress}" showValue="true" state="Success"/>
					</VBox>
					<customData>
						<core:CustomData key="unlocked" value="{=${unlocked}.toString()}" writeToDom="true"/>
					</customData>
				</CustomListItem>
			</List>
		</content>
	</Page>
</mvc:View>